{
  "name": "markread",
  "version": "0.1.0",
  "description": "MarkRead - A Markdown Reader",
  "main": "index.js",
  "scripts": {
    "compile:app-ts": "browserify --debug src/app/main.ts -p [ tsify --project src/app/tsconfig.json ] -o markread.js",
    "compile:webview-ts": "browserify --debug src/webview/index.ts -p [ tsify --project src/webview/tsconfig.json ] -o public/js/app.js",
    "compile:pcss": "postcss src/webview/index.pcss -o public/css/app.css",
    "watch:pcss": "postcss src/webview/index.pcss --watch -o public/css/app.css",
    "build:pcss": "postcss src/webview/index.pcss --env production -o public/css/app.css",
    "build:app-ts": "browserify src/app/main.ts -p [ tsify --project src/app/tsconfig.json ] -o markread.js",
    "build:webview-ts": "browserify src/webview/index.ts -p [ tsify --project src/webview/tsconfig.json ] -o public/js/app.js",
    "build-exe": "echo '#!/usr/bin/env gjs\\n' | cat - markread.js > markread && chmod 755 markread",
    "clean:app-ts": "rm -f markread.js",
    "clean:webview-ts": "rm -f public/js/app.js",
    "clean:pcss": "rm -f public/css/app.css",
    "clean:exe": "rm -f markread",
    "compile": "run-s compile:*",
    "build": "run-s build:* build-exe",
    "clean": "run-s clean:*",
    "serve": "budo src/webview/index.ts:js/app.js -p 3000 --dir public --live=*.{html,css} -- --debug -p [ browserify-hmr ] -p [ tsify --project src/webview/tsconfig.json ]",
    "start": "run-p watch:* serve"
  },
  "keywords": [],
  "author": "spacejack",
  "license": "MIT",
  "dependencies": {
    "markdown-it": "^8.4.2",
    "mithril": "^1.1.6"
  },
  "devDependencies": {
    "@types/markdown-it": "0.0.7",
    "@types/mithril": "^1.1.13",
    "autoprefixer": "^9.4.2",
    "browserify": "^16.2.3",
    "browserify-hmr": "^0.3.7",
    "budo": "^11.5.0",
    "eslint": "^5.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.0.1",
    "postcss-custom-properties": "^8.0.9",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.0",
    "stylelint-config-recommended": "^2.1.0",
    "tsify": "^4.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1",
    "uglify-js": "^3.4.9"
  }
}
